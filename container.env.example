# Copy this file to container.env and fill in the values

# Supabase configuration
SUPABASE_URL=your_supabase_url
SUPABASE_API_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key
SUPABASE_POSTGRES_URL=your_supabase_postgres_url

# Optional: Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Enable document upload functionality
NEXT_PUBLIC_ENABLE_EXPENSE_DOCUMENTS=false

# S3 configuration (required if NEXT_PUBLIC_ENABLE_EXPENSE_DOCUMENTS=true)
S3_UPLOAD_KEY=your_s3_access_key
S3_UPLOAD_SECRET=your_s3_secret_key
S3_UPLOAD_BUCKET=your_s3_bucket_name
S3_UPLOAD_REGION=your_s3_region
S3_UPLOAD_ENDPOINT=your_s3_endpoint # Optional, only for non-AWS providers

# OpenAI API configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key

# AI Feature flags (require OPENAI_API_KEY)
NEXT_PUBLIC_ENABLE_RECEIPT_EXTRACT=false
NEXT_PUBLIC_ENABLE_CATEGORY_EXTRACT=false
NEXT_PUBLIC_ENABLE_CONVERSATIONAL_EXPENSE=false

# Optional: Default currency symbol
NEXT_PUBLIC_DEFAULT_CURRENCY_SYMBOL=$
